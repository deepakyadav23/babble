<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/margin_x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activity_title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_description"
                android:padding="@dimen/padding_x2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Description of the feature like what ust means and what do we get as a result etc this much is enought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:id="@+id/activity_input"
                    android:hint="Type in here.."
                    android:layout_gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/activity_imgBtn"
                    android:padding="10dp"
                    android:src="@drawable/ic_microphone"
                    android:background="@drawable/shape_round"
                    android:layout_gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/result_listView"
        android:layout_margin="@dimen/margin_x2"
        android:padding="@dimen/padding_x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>