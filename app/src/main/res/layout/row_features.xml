<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="@dimen/margin_x2"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:padding="@dimen/padding_x2"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/padding_x"
            android:id="@+id/feature_title"
            android:textSize="25dp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/padding_x2"
            android:id="@+id/feature_description"
            android:textSize="20sp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/feature_img"
        android:padding="15dp"
        android:src="@drawable/arrow_right"
        android:layout_gravity="end|center"
        android:background="@drawable/shape_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>

</android.support.v7.widget.CardView>